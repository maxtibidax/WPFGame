<UserControl x:Class="WPFGame.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="LightGray">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Новая игра" Width="150" Margin="10" Click="StartGame_Click"/>
            <Button Content="Статистика" Width="150" Margin="10" Click="ShowStats_Click"/>
            <Button Content="Настройки" Width="150" Margin="10" Click="ShowSettings_Click"/>
            <Button Content="Выход" Width="150" Margin="10" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</UserControl>